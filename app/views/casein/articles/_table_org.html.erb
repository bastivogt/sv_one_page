<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "Content", :content %></th>
			<th><%= casein_sort_link "Sorting index", :sorting_index %></th>
			<th><%= casein_sort_link "Menu position", :menu_position %></th>
			<th><%= casein_sort_link "ID", :nav_id %></th>
			<th><%= casein_sort_link "Modal ID", :modal_id %></th>
			<th><%= casein_sort_link "Css class", :css_class %></th>
			<th><%= casein_sort_link "Inline style", :inline_style %></th>
			<th><%= casein_sort_link "Padding top", :padding_top %></th>
			<th><%= casein_sort_link "Padding bottom", :padding_bottom %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>

	<% articles.each do |article| %>
		<tr>
			<td><%= casein_table_cell_link article.title, casein_article_path(article) %></td>
			<td><%= casein_table_cell_link article.content, casein_article_path(article) %></td>
			<td><%= casein_table_cell_link article.sorting_index, casein_article_path(article) %></td>
			<td><%= casein_table_cell_link article.menu_position, casein_article_path(article) %></td>
			<td><%= casein_table_cell_link article.nav_id, casein_article_path(article) %></td>
			<td><%= casein_table_cell_link article.modal_id, casein_article_path(article) %></td>
			<td><%= casein_table_cell_link article.css_class, casein_article_path(article) %></td>
			<td><%= casein_table_cell_link article.inline_style, casein_article_path(article) %></td>
			<td><%= casein_table_cell_link article.padding_top, casein_article_path(article) %></td>
			<td><%= casein_table_cell_link article.padding_bottom, casein_article_path(article) %></td>

			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_article_path(article), :method => :delete, :data => { :confirm => "Are you sure you want to delete this article?" }) %>
			</td>
		</tr>
	<% end %>
</table>

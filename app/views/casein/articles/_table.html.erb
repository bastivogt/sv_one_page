<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "ID", :nav_id %></th>
			<th><%= casein_sort_link "Sorting index", :sorting_index %></th>
			<th><%= casein_sort_link "Menu position", :menu_position %></th>
			<th><%= casein_sort_link "Published", :published %></th>
			<th><%= casein_sort_link "Show in nav", :show_in_nav %></th>

			<th>&nbsp;</th>
		</tr>
	</thead>

	<% articles.each do |article| %>
		<tr>
			<td><%= casein_table_cell_link article.title, casein_article_path(article) %></td>
			<td><%= casein_table_cell_link article.nav_id, casein_article_path(article) %></td>
			<td><%= casein_table_cell_link article.sorting_index, casein_article_path(article) %></td>
			<td><%= casein_table_cell_link article.menu_position, casein_article_path(article) %></td>
			<td><%= casein_table_cell_link article.published, casein_article_path(article) %></td>
			<td><%= casein_table_cell_link article.show_in_nav, casein_article_path(article) %></td>

			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_article_path(article), :method => :delete, :data => { :confirm => "Are you sure you want to delete this article?" }) %>
			</td>
		</tr>
	<% end %>
</table>

<!-- Scaffolding generated by Casein v5.1.1.5 -->

<%= create_collapse_panel title: "Title / content", open: true, id: "title_content" do %>
	<div class="row">
		<div class="col-sm-12">
			<%= casein_text_field f, f.object, :title %>
		</div>
		<div class="col-sm-12">
			<%= casein_text_area f, f.object, :content, {class: "tinymce"} %>
		</div>
	</div>
<% end %>

<%= create_collapse_panel title: "Background image", open: false, id: "bg_image" do %>
	<div class="row">
		<div class="col-sm-12">
			<%= casein_text_field f, f.object, :bg_img_src %>
		</div>
		<div class="col-lg-6">
			<%= casein_select f, f.object, :bg_img_pos_h, ["left", "center", "right"] %>
		</div>
		<div class="col-lg-6">
			<%= casein_select f, f.object, :bg_img_pos_v, ["top", "center", "bottom"] %>
		</div>
		<div class="col-lg-6">
			<%= casein_check_box f, f.object, :bg_img_publish %>
		</div>
	</div>
<% end %>

<%= create_collapse_panel title: "Nav Settings", open: false, id: "nav_settings" do %>
	<div class="row">
		<div class="col-lg-6">
			<%= casein_number_field f, f.object, :sorting_index %>
		</div>
		<div class="col-lg-6">
			<%= casein_select f, f.object, :menu_position, ["left", "right"] %>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-6">
			<%= casein_text_field f, f.object, :nav_id, {casein_label: "ID"} %>
		</div>
		<div class="col-lg-6">
			<%= casein_text_field f, f.object, :modal_id, {casein_label: "Modal ID"} %>
		</div>
		<div class="col-lg-6">
			<%= casein_check_box f, f.object, :show_in_nav %>
		</div>
	</div>
<% end %>

<%= create_collapse_panel title: "CSS", open: false, id: "css" do %>
	<div class="row">
		<div class="col-lg-6">
			<%= casein_text_field f, f.object, :css_class %>
		</div>
		<div class="col-lg-6">
			<%= casein_text_area f, f.object, :inline_style %>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-6">
			<%= casein_text_field f, f.object, :padding_top %>
		</div>
		<div class="col-lg-6">
			<%= casein_text_field f, f.object, :padding_bottom %>
		</div>
	</div>
<% end %>

<%= create_collapse_panel title: "HTML tag", open: false, id: "html_tag" do %>
	<div class="row">
		<div class="col-lg-6">
			<%= casein_select f, f.object, :html_tag_name, ["article", "section", "header", "footer", "div"] %>
		</div>
	</div>
<% end %>

<%= create_collapse_panel title: "Publishing", open: false, id: "publishing" do %>
	<div class="row">
		<div class="col-lg-6">
			<%= casein_check_box f, f.object, :published %>
		</div>
	</div>
<% end %>
